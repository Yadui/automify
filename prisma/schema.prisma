// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  name                String?
  hashedPassword      String?
  profileImage        String?
  tier                String    @default("Free")
  credits             String    @default("10")
  deletionScheduledAt DateTime? // Null = active, set = scheduled for deletion after 48h
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  sessions    Session[]
  connections Connection[]
  workflows   Workflow[]
}

model Session {
  id        String   @id
  userId    Int
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Connection {
  id                String   @id @default(uuid())
  provider          String // e.g., "slack", "google", "notion"
  providerAccountId String // The unique ID from the provider
  accessToken       String
  refreshToken      String?
  expiresAt         DateTime?
  scopes            String?
  metadata          Json?
  status            String    @default("active") // active, revoked, expired

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  subscriptions WebhookSubscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, provider, providerAccountId])
}

model WebhookSubscription {
  id                String    @id @default(uuid())
  externalId        String?   @unique
  channelId         String?   @unique
  verificationToken String?
  expiration        DateTime?
  status            String    @default("active")

  connectionId String
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  workflowId String?
  workflow   Workflow? @relation(fields: [workflowId], references: [id], onDelete: SetNull)
}

model Workflow {
  id              String   @id @default(uuid())
  name            String
  description     String
  nodes           Json?
  edges           Json?
  publish         Boolean  @default(false)
  flowPath        String?
  cronPath        String?
  discordTemplate String?
  slackTemplate   String?
  slackChannels   String[]
  notionTemplate  String?
  notionDbId      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  webhooks WebhookSubscription[]
}
